              android:src="@drawable/c_church"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:layout_marginBottom="60dp"
              android:layout_marginLeft="0dp"
              android:layout_marginRight="0dp"
              android:layout_marginTop="0dp"
              android:padding="0dp"
              android:id="@+id/imageButtonSelectChurch" />
            <ImageButton
              android:src="@drawable/c_lake"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:layout_marginBottom="60dp"
              android:layout_marginLeft="0dp"
              android:layout_marginRight="0dp"
              android:layout_marginTop="0dp"
              android:padding="0dp"
              android:id="@+id/imageButtonSelectLake" />
            <ImageButton
              android:src="@drawable/c_mountain"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:layout_marginBottom="60dp"
              android:layout_marginLeft="0dp"
              android:layout_marginRight="0dp"
              android:layout_marginTop="0dp"
              android:padding="0dp"
                android:id="@+id/imageButtonSelectMountain" />
            <ImageButton
              android:src="@drawable/c_palace"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:layout_marginBottom="60dp"
