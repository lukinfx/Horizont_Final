<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:id="@+id/cameraLinearLayout">
        <ImageButton
        android:src="@drawable/ic_camera_blue2"
        android:layout_columnWeight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:id="@+id/buttonHome" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to camera"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:textColor="#222222"/>
    </LinearLayout>
    
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/actionMenuTextColor"/>
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:id="@+id/listOfPoisLinearLayout">
        <ImageButton
            android:src="@drawable/ic_notesalt_blue2"
            android:layout_columnWeight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:id="@+id/buttonList" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List of POIs"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:textColor="#222222"/>
    </LinearLayout>

    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/actionMenuTextColor"/>
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:id="@+id/downloadDataLinearLayout">
    <ImageButton
      android:src="@drawable/ic_download_blue2"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:scaleType="fitCenter"
      android:background="#00000000"
      android:id="@+id/buttonDownload" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download data"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:textColor="#222222"/>
    </LinearLayout>

    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/actionMenuTextColor"/>
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:id="@+id/photoGalleryLinearLayout">
    <ImageButton
      android:src="@drawable/ic_gallery_blue2"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:scaleType="fitCenter"
      android:background="#00000000"
      android:id="@+id/buttonPhotos" />
        
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo grallery"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:textColor="#222222"/>
    </LinearLayout>
    
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/actionMenuTextColor"/>
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:id="@+id/settingsLinearLayout">
        <ImageButton
          android:src="@drawable/ic_settingsalt_blue2"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:scaleType="fitCenter"
          android:background="#00000000"
          android:id="@+id/buttonSettings" />
    
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:textColor="#222222"/>
    </LinearLayout>
    
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/actionMenuTextColor"/>
    <Space
      android:layout_width="match_parent"
      android:layout_height="3dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:id="@+id/aboutLinearLayout">
        
        <ImageButton
          android:src="@drawable/ic_systeminfo_blue2"
          android:layout_columnWeight="1"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:scaleType="fitCenter"
          android:background="#00000000"
          android:id="@+id/buttonAbout" />

    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15dp"
            android:textColor="#222222"/>
    </LinearLayout>
</LinearLayout>
