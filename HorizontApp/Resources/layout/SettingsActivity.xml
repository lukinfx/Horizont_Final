<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:minWidth="25px"
  android:minHeight="25px"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp"
          android:background="@drawable/bg_activity">
            <TextView
              android:text="@string/SpinnerItems"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
            <Spinner
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@+id/spinnerAppStyle" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp"
          android:background="@drawable/bg_activity">
            <TextView
              android:text="@string/ChooseLanguage"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
            <Spinner
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@+id/spinnerLanguage" />
        </LinearLayout>
        
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:background="@drawable/bg_activity">
            
            <TextView
              android:text="Camera View Angle"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <Switch
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="Set view angle manually"
              android:id="@+id/switchManualViewAngle" />

            <TextView
              android:paddingTop="10dp"
              android:text="Horizontal view angle"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <SeekBar
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:id="@+id/seekBarCorrectionViewAngleHorizontal"
              android:min="-100"
              android:max="100"
              android:progress="0" />
            <TextView
              android:text="Current camera view angle is 40 (set manually)"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textViewAngleHorizontal" />

            <TextView
              android:paddingTop="10dp"
              android:text="Vertical view angle"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
            <SeekBar
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:id="@+id/seekBarCorrectionViewAngleVertical"
              android:min="-100"
              android:max="100"
              android:progress="0" />
            <TextView
              android:text="Current camera view angle is 40 (set manually)"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textViewAngleVertical" />
            <Button
              android:text="Reset"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/reset" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp"
          android:background="@drawable/bg_activity">
          <TextView
            android:text="GPS Location"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
          <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Set GPS location manually"
            android:id="@+id/switchManualGpsLocation" />
          <GridLayout
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:rowCount="3"
            android:columnCount="2">
            <TextView
              android:paddingTop="10dp"
              android:layout_columnWeight="3"
              android:text="Latitude: "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/latitudeTitle" />
            <EditText
              android:layout_columnWeight="8"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="numberDecimal"
              android:digits="0123456789.,"
              android:padding="10px"
              android:background="@drawable/bg_edittext"
              android:id="@+id/editTextLatitude" />
            <TextView
              android:paddingTop="10dp"
              android:layout_columnWeight="3"
              android:text="Longitude: "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/longitudeTitle" />
            <EditText
              android:layout_columnWeight="8"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="numberDecimal"
              android:digits="0123456789.,"
              android:padding="10px"
              android:background="@drawable/bg_edittext"
              android:id="@+id/editTextLongitude" />
            <TextView
              android:paddingTop="10dp"
              android:layout_columnWeight="3"
              android:text="Altitude: "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/altitudeTitle" />
            <EditText
              android:layout_columnWeight="8"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="numberDecimal"
              android:digits="0123456789.,"
              android:padding="10px"
              android:background="@drawable/bg_edittext"
              android:id="@+id/editTextAltitude" />
          </GridLayout>
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp"
          android:background="@drawable/bg_activity">
          <TextView
            android:text="Elevation profile"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <TextView
            android:text="For better user experience it is possible to obtain and show elevation profile automatically whenever the data are available."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Auto elevation profile"
            android:id="@+id/switchAutoElevationProfile" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp"
          android:background="@drawable/bg_activity">
          <TextView
            android:text="My altitude"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <TextView
            android:text="Accurate altitude is very important for user experience. You can possibly use altitude value from elevation map (when elevation data are available) instead of altitude from GPS."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
          <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Use altitude from elevation map"
            android:id="@+id/switchAltitudeFromElevationMap" />
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp"
          android:background="@drawable/bg_activity">
            <TextView
              android:text="Photo resolution"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
            <Spinner
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:id="@+id/spinnerResolution" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
