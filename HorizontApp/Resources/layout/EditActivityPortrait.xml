
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
  <include
    android:id="@+id/toolbar"
    layout="@layout/editActivityToolbar" />

  <AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_portrait">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="500dp"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      android:layout_x="0dp"
      android:layout_y="40dp"
      android:padding="20dp"
      android:background="@drawable/bg_activity">

      <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/space1"
        android:minHeight="40dp"/>
      <LinearLayout
          android:orientation="vertical"
          android:minWidth="25px"
          android:minHeight="25px"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/linearLayoutName">
        <TextView
            android:text="Name: "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/NameTitle" />
        <EditText
            android:text="My current location"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:singleLine="false"
            android:background="@drawable/bg_edittext"
            android:id="@+id/editTextName" />

        <GridLayout
          android:paddingTop="20dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/linearLayoutLatLon"
          android:rowCount="2"
          android:columnCount="5">

          <TextView
              android:layout_columnWeight="8"
              android:text="Latitude: "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/latitudeTitle" />
          <EditText
              android:layout_columnWeight="8"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10px"
              android:background="@drawable/bg_edittext"
              android:id="@+id/editTextLatitude" />
          <Space
            android:layout_columnWeight="2"/> 
          <Space
            android:layout_columnWeight="2"/> 
          <TextView
              android:layout_columnWeight="8"
              android:text="Longitude: "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/longitudeTitle" />
          <EditText
              android:layout_columnWeight="8"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10px"
              android:background="@drawable/bg_edittext"
              android:id="@+id/editTextLongitude" />
          <Space
            android:layout_columnWeight="2"/> 
          <Space
            android:layout_columnWeight="2"/> 
          <TextView
            android:layout_columnWeight="3"
            android:text="Altitude: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/altitudeTitle" />
          <EditText
            android:layout_columnWeight="3"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10px"
            android:background="@drawable/bg_edittext"
            android:id="@+id/editTextAltitude" />
        </GridLayout>
        
        <TextView
          android:text="Category: "
          android:paddingTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/categoryTitle" />
        <Spinner
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:spinnerMode="dialog"
          android:padding="10px"
          android:background="@drawable/bg_edittext"
          android:id="@+id/spinnerCategory" />

        <android.support.v4.widget.Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/space2"
          android:minHeight="40dp"/>

        <LinearLayout
          android:orientation="horizontal"
          android:minWidth="25px"
          android:minHeight="25px"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/linearLayoutWiki">
          <ImageButton
            android:src="@drawable/map_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
            android:id="@+id/buttonMap"/>
          <ImageButton
            android:src="@drawable/wikipedia_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00000000"
          android:id="@+id/buttonWiki"/>
        </LinearLayout>
      </LinearLayout>

    </LinearLayout>
    
    <ImageView
      android:id="@+id/Thumbnail"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:src="@drawable/c_basic"/>
  </AbsoluteLayout>


</LinearLayout>