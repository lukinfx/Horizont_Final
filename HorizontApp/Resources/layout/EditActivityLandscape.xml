<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:orientation="horizontal"
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/linearLayout0">
    <ImageButton
        android:src="@drawable/back"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack" />
    <ImageButton
        android:src="@drawable/check"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSave" />
    <ImageButton
        android:src="@drawable/paste"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPaste" />
  </LinearLayout>

  <AbsoluteLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="20dp"
      android:background="#a0a0a0">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="?android:attr/colorBackground"
        android:id="@+id/linearLayout1">
      <LinearLayout
          android:orientation="horizontal"
          android:minWidth="25px"
          android:minHeight="25px"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingBottom="20dp"
          android:id="@+id/linearLayout2">
        <ImageView
            android:id="@+id/Thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/c_basic" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">
          <TextView
              android:text="Name: "
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:gravity="center"
              android:id="@+id/NameTitle" />
          <EditText
              android:text="My current location"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/editTextName" />
        </LinearLayout>
      </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">
      <TextView
          android:text="Latitude: "
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:id="@+id/latitudeTitle" />
      <EditText
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editTextLatitude"
          android:layout_toRightOf="@id/latitudeTitle"
          />
      <TextView
          android:text="Longitude: "
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:id="@+id/longitudeTitle" 
          android:layout_toRightOf="@id/editTextLatitude"
          />
      <EditText
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editTextLongitude" 
          android:layout_toRightOf="@id/longitudeTitle"
          />
      <TextView
          android:text="Altitude: "
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:id="@+id/altitudeTitle" 
          android:layout_toRightOf="@id/editTextLongitude"
          />
      <EditText
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/editTextAltitude" 
          android:layout_toRightOf="@id/altitudeTitle"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5">
      <TextView
        android:text="Category: "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/categoryTitle" />
      <Spinner
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/spinnerCategory" />
    </LinearLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/linearLayout6"
      android:gravity="center_horizontal|bottom">
      <ImageButton
          android:text="Open in map"
          android:src="@drawable/map_icon2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#00000000"
          android:id="@+id/buttonMap"/>
      <ImageButton
          android:src="@drawable/wikipedia_logo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#00000000"
          android:id="@+id/buttonWiki"/>
    </LinearLayout>
    </LinearLayout>
  </AbsoluteLayout>
</LinearLayout>