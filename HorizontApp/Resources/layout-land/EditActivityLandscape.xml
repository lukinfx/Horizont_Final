
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <include
      android:id="@+id/toolbar"
      layout="@layout/editActivityToolbar" />
    <AbsoluteLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="20dp"
      android:background="@drawable/background_landscape">
        <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingLeft="35dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:paddingTop="20dp"
              android:paddingBottom="20dp"
              android:paddingRight="40dp"
              android:paddingLeft="60dp"
              android:background="@drawable/bg_activity">

                <TextView
                  android:text="@string/Name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/NameTitle" />
                <EditText
                  android:text="@string/DefaultTextAddPoi"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10px"
                  android:singleLine="false"
                  android:background="@drawable/bg_edittext"
                  android:id="@+id/editTextName" />
                <GridLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:paddingTop="10dp"
                  android:paddingRight="10dp"
                  android:rowCount="1"
                  android:columnCount="2">
                  
                    <LinearLayout
                      android:layout_columnWeight="8"
                      android:orientation="vertical"
                      android:minWidth="25px"
                      android:minHeight="25px"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                        <GridLayout
                        android:paddingTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="30dp"
                        android:rowCount="3"
                        android:columnCount="2">
                          <TextView
                            android:paddingTop="10dp"
                            android:layout_columnWeight="3"
                            android:text="@string/Latitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/latitudeTitle" />
                          <EditText
                            android:layout_columnWeight="8"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:digits="0123456789.,"
                            android:padding="10px"
                            android:background="@drawable/bg_edittext"
                            android:id="@+id/editTextLatitude" />
                          <TextView
                            android:paddingTop="10dp"
                            android:layout_columnWeight="3"
                            android:text="@string/Longitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/longitudeTitle" />
                          <EditText
                            android:layout_columnWeight="8"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:digits="0123456789.,"
                            android:padding="10px"
                            android:background="@drawable/bg_edittext"
                            android:id="@+id/editTextLongitude" />
                          <TextView
                            android:paddingTop="10dp"
                            android:layout_columnWeight="3"
                            android:text="@string/Altitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/altitudeTitle" />
                          <EditText
                            android:layout_columnWeight="8"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:digits="0123456789.,"
                            android:padding="10px"
                            android:background="@drawable/bg_edittext"
                            android:id="@+id/editTextAltitude" />
                      </GridLayout>
                    </LinearLayout>

                    <LinearLayout
                      android:paddingTop="10dp"
                      android:layout_columnWeight="8"
                      android:orientation="vertical"
                      android:minWidth="25px"
                      android:minHeight="25px"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/linearLayoutName">

                        <TextView
                          android:text="@string/Category"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/categoryTitle" />
                        <Spinner
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:spinnerMode="dialog"
                          android:padding="10px"
                          android:background="@drawable/bg_edittext"
                          android:id="@+id/spinnerCategory" />

                        <LinearLayout
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:paddingTop="30dp"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:id="@+id/linearLayoutWiki">
                            <ImageButton
                              android:src="@android:drawable/ic_menu_mapmode"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/buttonMap"/>
                            <ImageButton
                              android:src="@android:drawable/ic_menu_info_details"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/buttonWiki"/>
                            <ImageButton
                              android:src="@android:drawable/ic_menu_mylocation"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/buttonTeleport"/>
                        </LinearLayout>
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
          android:id="@+id/Thumbnail"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:src="@drawable/c_basic"/>
    </AbsoluteLayout>
</LinearLayout>