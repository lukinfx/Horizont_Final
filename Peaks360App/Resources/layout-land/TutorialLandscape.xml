<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:padding="3dp">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageSwitcher
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:minWidth="250dp"
            android:layout_weight="2"
            android:background="#ff8080"
            android:id="@+id/tutorialImageSwitcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:paddingVertical="5dp"
                android:paddingLeft="3dp"
                android:text="Move you finger on to of the screen to adjust compass heading. But the text can be possibly much much much much much much much much much longer."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:maxWidth="200dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAlignment="center"
                android:id="@+id/tutorialHintText"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <CheckBox
                android:text="@string/Tutorial_DontShowAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:id="@+id/checkBoxDontShowAgain" />
            <Button
                android:id="@+id/nextButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="right"
                android:paddingVertical="10dp"
                android:drawableLeft="@drawable/material_ic_keyboard_arrow_next_black_24dp"
                android:background="@android:color/transparent"
                android:text="Next" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>