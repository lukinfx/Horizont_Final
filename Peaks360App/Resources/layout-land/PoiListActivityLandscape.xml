<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

  <include
    android:id="@+id/toolbar"
    layout="@layout/PoiListActivityToolbar" />

  <LinearLayout
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_landscape">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_activity"
      android:id="@+id/linearLayoutSearching">

      <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
          android:padding="5dp"
          android:orientation="vertical"
          android:layout_weight="10"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="@string/Common_Name" />

          <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:singleLine="true"
            android:hint="@string/Common_Search"
            android:id="@+id/editTextSearch" />
        </LinearLayout>

        <LinearLayout
          android:padding="5dp"
          android:orientation="vertical"
          android:layout_weight="9"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
            android:paddingTop="5dp"
            android:text="@string/Common_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/spinnerCategory" />

        </LinearLayout>

        <LinearLayout
          android:padding="5dp"
          android:orientation="vertical"
          android:layout_weight="9"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
            android:paddingTop="5dp"
            android:text="@string/Common_Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/spinnerCountry" />

        </LinearLayout>

      </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <ListView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/listViewPoi"
      android:background="@drawable/bg_activity"/>

  </LinearLayout>
</LinearLayout>