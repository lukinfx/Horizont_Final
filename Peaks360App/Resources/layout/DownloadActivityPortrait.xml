    <TabHost
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/tabhost">

      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout1">
        
        <include
          android:id="@+id/toolbar"
          layout="@layout/TitleToolbar" />
        <TabWidget
          android:id="@android:id/tabs"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

              <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:id="@+id/downloadTabPois">

                <androidx.cardview.widget.CardView 
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    style="@style/CardViewCustomStyle"
                    android:id="@+id/cardSearching">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_activity_lightgray">

                        <LinearLayout
                            android:id="@+id/DownloadCountryLayout"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/DownloadCountryIcon"
                                android:padding="5dp"
                                android:layout_width="75dp"
                                android:layout_height="50dp"
                                android:layout_weight="0"
                                android:src="@drawable/flag_of_macedonia"/>

                            <TextView
                                android:id="@+id/DownloadCountryTextView"
                                android:text="Selected country"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:padding="10dp"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_expand_more_black_24dp"
                                android:background="@android:color/transparent"/>

                        </LinearLayout>
                    </LinearLayout>
                 </androidx.cardview.widget.CardView>

                <ListView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/DownloadItemListView" />
              </LinearLayout>

              <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/downloadTabEleData" >
                <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:background="@drawable/bg_activity_lightgray">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/DownloadED_Information"/>
                </LinearLayout>
                
                <Space
                  android:layout_width="match_parent"
                  android:layout_height="10dp"/>
                <ListView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="10dp"
                  android:id="@+id/listViewDownloadedElevationData" />
                
              </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

    
