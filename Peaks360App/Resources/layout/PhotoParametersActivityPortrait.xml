<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/TitleToolbar"/>
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/Thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tutorial_compass_calibration"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_gradient"
                android:id="@+id/linearLayoutSelectedPoint">
                <EditText
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="textMultiLine"
                    android:id="@+id/editTextTag"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/CardViewCustomStyle"
                android:id="@+id/cardDirection">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/cardDirectionLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:src="@drawable/i_compass"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="@string/PhotoParameters_ViewDirection"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"/>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_weight="0"
                            android:src="@drawable/alert"
                            android:id="@+id/cardDirectionAlert"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:src="@drawable/baseline_expand_more_black_24dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/cardDirectionButton"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cardDirectionContent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:padding="20dp">
                        <GridLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:rowCount="1"
                            android:columnCount="3">
                            <TextView
                                android:layout_columnWeight="2"
                                android:paddingTop="5dp"
                                android:text="@string/Common_Heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/altitudeTitle"/>
                            <EditText
                                android:layout_columnWeight="8"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:digits="0123456789.+-"
                                android:id="@+id/editTextHeading"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                android:src="@drawable/alert"
                                android:id="@+id/editTextHeadingAlert"/>
                        </GridLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">
                            <Button
                                android:id="@+id/buttonBearing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:layout_gravity="right"
                                android:text="@string/Common_Choose"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@android:drawable/ic_menu_compass"/>
                            <Button
                                android:id="@+id/buttonViewDirectionInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:paddingHorizontal="10dp"
                                android:text="Info"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@android:drawable/ic_menu_info_details"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/CardViewCustomStyle"
                android:id="@+id/cardLocation">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/cardLocationLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:src="@drawable/i_location"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="@string/PhotoParameters_CameraLocation"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"/>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_weight="0"
                            android:src="@drawable/alert"
                            android:id="@+id/cardLocationAlert"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:src="@drawable/baseline_expand_more_black_24dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/cardLocationButton"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cardLocationContent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="20dp">
                        <GridLayout
                            android:id="@+id/cardLocationContent"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:rowCount="3"
                            android:columnCount="3">
                            <TextView
                                android:paddingTop="5dp"
                                android:layout_columnWeight="2"
                                android:text="@string/Common_Latitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/latitudeTitle"/>
                            <EditText
                                android:layout_columnWeight="8"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:digits="0123456789.+-"
                                android:id="@+id/editTextLatitude"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                android:src="@drawable/alert"
                                android:id="@+id/editTextLatitudeAlert"/>
                            <TextView
                                android:paddingTop="5dp"
                                android:layout_columnWeight="2"
                                android:text="@string/Common_Longitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/longitudeTitle"/>
                            <EditText
                                android:layout_columnWeight="8"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:digits="0123456789.+-"
                                android:id="@+id/editTextLongitude"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                android:src="@drawable/alert"
                                android:id="@+id/editTextLongitudeAlert"/>
                            <TextView
                                android:paddingTop="5dp"
                                android:layout_columnWeight="2"
                                android:text="@string/Common_Altitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/altitudeTitle"/>
                            <EditText
                                android:layout_columnWeight="8"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:digits="0123456789."
                                android:id="@+id/editTextAltitude"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                android:src="@drawable/alert"
                                android:id="@+id/editTextAltitudeAlert"/>
                        </GridLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">
                            <Button
                                android:id="@+id/buttonMap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:paddingHorizontal="10dp"
                                android:text="@string/Common_Map"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@android:drawable/ic_menu_mapmode"/>
                            <Button
                                android:id="@+id/buttonLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:text="@string/Common_Choose"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@android:drawable/ic_menu_mylocation"/>
                            <Button
                                android:id="@+id/buttonCameraLocationInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:paddingHorizontal="10dp"
                                android:text="Info"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@android:drawable/ic_menu_info_details"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/CardViewCustomStyle"
                card_view:cardCornerRadius="10dp"
                android:id="@+id/cardViewAngles">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/cardViewAnglesLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <ImageView
                            android:src="@drawable/ic_viewangle"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="@string/PhotoParameters_CameraViewAngles"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"/>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="100"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_weight="0"
                            android:src="@drawable/alert"
                            android:id="@+id/cardViewAnglesAlert"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:src="@drawable/baseline_expand_more_black_24dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/cardViewAnglesButton"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cardViewAnglesContent"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="20dp">
                        <GridLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:rowCount="2"
                            android:columnCount="3">
                            <TextView
                                android:paddingTop="5dp"
                                android:layout_columnWeight="2"
                                android:text="@string/Common_HorizontalViewAngle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/altitudeTitle"/>
                            <EditText
                                android:layout_columnWeight="8"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:digits="0123456789."
                                android:id="@+id/editTextViewAngleHorizontal"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                android:src="@drawable/alert"
                                android:id="@+id/editTextViewAngleHorizontalAlert"/>
                            <TextView
                                android:paddingTop="5dp"
                                android:layout_columnWeight="2"
                                android:text="@string/Common_VerticalViewAngle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/altitudeTitle"/>
                            <EditText
                                android:layout_columnWeight="8"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:digits="0123456789."
                                android:id="@+id/editTextViewAngleVertical"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                android:src="@drawable/alert"
                                android:id="@+id/editTextViewAngleVerticalAlert"/>
                        </GridLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">
                            <Button
                                android:id="@+id/buttonViewAnglesInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:paddingHorizontal="10dp"
                                android:text="Info"
                                android:background="@android:color/transparent"
                                android:drawableLeft="@android:drawable/ic_menu_info_details"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>