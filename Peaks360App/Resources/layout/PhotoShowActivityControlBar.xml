<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="bottom">
            <ImageButton
                android:src="@drawable/ic_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:id="@+id/menuButton" />
            <ImageButton
                android:src="@drawable/ic_filter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:id="@+id/buttonCategorySelect" />
            <ImageButton
              android:src="@drawable/ic_terrain"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:padding="0dp"
              android:id="@+id/buttonDisplayTerrain" />
            <ImageButton
              android:src="@drawable/ic_eye_off"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:padding="0dp"
              android:id="@+id/buttonDisplayOverlapped" />
            <ImageButton
              android:src="@drawable/ic_savetodevice"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:padding="0dp"
              android:id="@+id/buttonSaveToDevice" />
            <ImageButton
              android:src="@drawable/ic_share"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:padding="0dp"
              android:id="@+id/buttonShare" />
            <ImageButton
              android:src="@drawable/ic_crop"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:padding="0dp"
              android:id="@+id/buttonCropImage"/>
            <ImageButton
              android:src="@drawable/ic_edit"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="bottom"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter"
              android:padding="0dp"
              android:id="@+id/buttonTiltCorrector"/>
</LinearLayout>
