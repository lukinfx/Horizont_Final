<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="5dp"
  android:id="@+id/linearLayoutSelectCategory">

    <ImageSwitcher
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="10"
      android:id="@+id/tutorialImageSwitcher"/>

    <TextView
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:text="Move you finger on to of the screen to adjust compass heading."
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_weight="0"
      android:id="@+id/tutorialHintText"/>

    <CheckBox
      android:text="@string/Tutorial_DontShowAgain"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/checkBoxDontShowAgain" />

</LinearLayout>