<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:id="@+id/linearLayoutItem">
  
  <androidx.cardview.widget.CardView 
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="5dp"
    style="@style/CardViewCustomStyle">

    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_gradient"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/Thumbnail"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_weight="0"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:src="@drawable/c_castle" />
            <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="10">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                      android:id="@+id/Title"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="5dp"
                      android:paddingTop="3dp"
                      android:textColor="@android:color/black"
                      android:textStyle="bold"
                      android:typeface="sans"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:text="gukjgsdfsdfdfsdffd"/>
                    <ImageView 
                      android:id="@+id/InfoAvailable"
                      android:layout_width="15dp"
                      android:layout_height="15dp"
                      android:layout_gravity="top"
                      android:paddingTop="5dp"
                      android:paddingLeft="5dp"
                      android:scaleType="fitStart"
                      android:src="@drawable/i_info_black"/>
                </LinearLayout>

                <TextView
                  android:id="@+id/Country"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/Title"
                  android:paddingLeft="5dp"
                  android:paddingTop="1dp"
                  android:paddingBottom="2dp"
                  android:singleLine="true"
                  android:ellipsize="end"
                  android:textSize="11sp" 
                  android:text="item country"/>
              </LinearLayout>
        <ImageButton
          android:src="@android:drawable/btn_star_big_off"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:scaleType="fitCenter"
          android:id="@+id/PoiLikeButton"
          android:layout_weight="0"
          android:layout_gravity="right"
          android:background="#00000000"/>
      </LinearLayout>

      <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#e0e0e0" />

      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout 
                  android:layout_width="80dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center">
                  <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="#f0f0f0">
                      <ImageView
                        android:src="@drawable/i_elevation"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"/>
                  </FrameLayout>
                  <TextView
                    android:id="@+id/textViewAltitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textSize="11sp" 
                    android:paddingVertical="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:text="123 m"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d0d0d0"/>

                <LinearLayout 
                  android:layout_width="80dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center">
                  <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="#f0f0f0">
                      <ImageView
                        android:src="@drawable/i_compass"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"/>
                    </FrameLayout>
                  <TextView

                    android:id="@+id/textViewDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textSize="11sp" 
                    android:paddingVertical="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:text="123"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d0d0d0"/>

                <LinearLayout 
                  android:layout_width="80dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center">
                  <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:background="#f0f0f0">
                      <ImageView
                        android:src="@drawable/i_location"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"/>
                    </FrameLayout>
                  <TextView
                    android:id="@+id/textViewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textSize="11sp" 
                    android:paddingVertical="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:text="123.4 km"/>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#d0d0d0"/>

                <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="100"
                  android:orientation="horizontal"
                  android:gravity="right">
                  
                  <ImageButton
                    android:id="@+id/PoiEditButton" 
                    android:src="@drawable/ic_edit_outline"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:paddingLeft="5dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="0"
                    android:background="#00000000"/>
                  <ImageButton
                    android:id="@+id/PoiDeleteButton" 
                    android:src="@drawable/ic_delete_outline"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:scaleType="fitCenter"
                    android:layout_weight="0"
                    android:background="#00000000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>