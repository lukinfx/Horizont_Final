<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="3dp"
    android:id="@+id/linearLayoutItem">
  <LinearLayout 
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout 
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingRight="10dp"
      android:orientation="vertical">

      <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="2dp"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/Thumbnail"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_weight="0"
          android:paddingRight="10dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:src="@drawable/c_basic" />
        <TextView
          android:id="@+id/Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@id/Thumbnail"
          android:paddingTop="5dp"
          android:textColor="#000000"
          android:textStyle="bold"
          android:typeface="sans"
          android:singleLine="true"
          android:ellipsize="end"
          android:text="gukjgsdfsdfdfsdffd"/>
        <ImageView
          android:id="@+id/InfoAvailable"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:paddingTop="5dp"
          android:paddingLeft="5dp"
          android:baselineAlignBottom="true"
          android:scaleType="fitStart"
          android:src="@drawable/i_info_black"/>
      </LinearLayout>

     <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#e0e0e0" />

      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingTop="5dp"
          android:paddingRight="10dp"
          android:orientation="vertical">
        
          <TextView
            android:id="@+id/Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="11sp" 
            android:text="item country"/>
          <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Country"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="11sp" 
            android:text="item description"/>

        </LinearLayout>

        <ImageButton
            android:src="@android:drawable/btn_star_big_off"
            android:layout_width="30dp"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"
            android:id="@+id/PoiLikeButton"
            android:layout_weight="0"
            android:background="#00000000"/>
        <ImageButton
            android:src="@android:drawable/ic_menu_delete"
            android:layout_width="40dp"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"
            android:id="@+id/PoiDeleteButton" 
            android:layout_weight="0"
            android:background="#00000000"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>