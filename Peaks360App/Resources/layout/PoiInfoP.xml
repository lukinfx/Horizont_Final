<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="bottom"
              android:padding="5dp">
  <LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_activity_light"
    android:paddingHorizontal="10dp"
    android:gravity="bottom">

    <TextView
      android:text="Name can be very very very very very very very long"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:ellipsize="end"
      android:singleLine="true"
      android:textColor="@android:color/black"
      android:id="@+id/textViewPoiName" />
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#606060" />

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:id="@+id/linearLayout1">
        <TextView
          android:text="@string/Main_HiddenInSurroundingTerrain"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/holo_red_dark"
          android:id="@+id/textViewPoiPartiallyVisible" />
        <TextView
          android:text="Description"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:id="@+id/textViewPoiDescription" />
        <TextView
          android:text="GPS location"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:id="@+id/textViewPoiGpsLocation" />
        <TextView
          android:text="Poi data"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@android:color/black"
          android:id="@+id/textViewPoiData" />
      </LinearLayout>

    <LinearLayout 
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right">

      <Button
        android:id="@+id/buttonWiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Common_Details"
        android:drawablePadding="5dp"
        android:paddingLeft="20dp"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@android:drawable/ic_menu_info_details" />

      <Button
        android:id="@+id/buttonMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Common_Map"
        android:drawablePadding="5dp"
        android:paddingLeft="20dp"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@android:drawable/ic_menu_mapmode" />

    </LinearLayout>
  </LinearLayout>
</LinearLayout>

