<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/linearLayoutSelectCategory">

    <LinearLayout android:orientation="vertical"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#909090">

      <TextView
        android:padding="10dp"
        android:text="@string/Common_CategoryFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:background="#404040"/>

      <GridLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:paddingHorizontal="10dp"
          android:rowCount="2"
          android:columnCount="4"
          android:orientation="horizontal">
                <ImageButton
                  android:layout_columnWeight="1"
                  android:src="@drawable/c_mountain"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectMountain" />
                <ImageButton
                  android:src="@drawable/c_castle"
                  android:layout_columnWeight="1"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectHistoric" />
                <ImageButton
                  android:src="@drawable/c_church"
                  android:layout_columnWeight="1"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectChurch" />
                <ImageButton
                  android:layout_columnWeight="1"
                  android:src="@drawable/c_lake"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectLake" />
                <ImageButton
                  android:layout_columnWeight="1"
                  android:src="@drawable/c_city"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectCity" />
                <ImageButton
                  android:layout_columnWeight="1"
                  android:src="@drawable/c_transmitter"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectTransmitter" />
                <ImageButton
                  android:layout_columnWeight="1"
                  android:src="@drawable/c_viewtower"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectViewtower" />
                <ImageButton
                  android:layout_columnWeight="1"
                  android:src="@drawable/c_other"
                  android:layout_height="60dp"
                  android:layout_gravity="bottom"
                  android:adjustViewBounds="true"
                  android:scaleType="fitCenter"
                  android:padding="2dp"
                  android:background="#00000000"
                  android:id="@+id/imageButtonSelectOther" /> 
        </GridLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:id="@+id/linearLayout1">
          <ImageButton
            android:layout_columnWeight="1"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:id="@+id/buttonFavourites" />
          <TextView
            android:text="@string/PoiList_FavouritesOnly"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:id="@+id/textView1" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:background="#E0404040">
            <Button android:text="@string/Common_All"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_weight="1"
                    android:id="@+id/buttonSelectAll" />
            <Button android:text="@string/Common_None"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/buttonSelectNone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>